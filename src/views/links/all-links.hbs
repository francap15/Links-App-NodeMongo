<div class="row">
    {{#each links}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/links/edit/{{_id}}"><i class="fa-solid fa-pen"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/links/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>