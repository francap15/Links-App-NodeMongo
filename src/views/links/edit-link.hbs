<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Link</h3>
        </div>
        <div class="card-body">
            <form action="/links/edit/{{link._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group mb-3">
                    <input type="text" name="title" class="form-control" value="{{link.title}}">
                </div>
                <div class="form-group mb-3">
                    <textarea name="description" class="form-control">{{link.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success bnt-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>